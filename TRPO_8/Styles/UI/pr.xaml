
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
                    >

    <Style x:Key="GridBlock" TargetType="Grid">
        <Setter Property="MinWidth" Value="500"/>
        <Setter Property="MaxWidth" Value="500"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        
    </Style>

    <Style x:Key="FormBorder" TargetType="Border" BasedOn="{StaticResource MaterialDesignToolBarMainPanelBorderStyle}">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10"/>

    <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonStandardNormalBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="SectionBorder" TargetType="Border" BasedOn="{StaticResource FormBorder}"/>
    
    <Style x:Key="StatisticBar" TargetType="Border">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonAddNormalBrush}"/>
    </Style>

    <Style x:Key="FormFieldPanel" TargetType="DockPanel">
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>

    <Style x:Key="FormStackPanel" TargetType="StackPanel">
        <Setter Property="MaxHeight" Value="300"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="RootGrid" TargetType="Grid">
        <Setter Property="Margin" Value="20"/>
    </Style>

    <Style x:Key="ButtonPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,10"/>
    </Style>

    <Style x:Key="UniformGridSpacing" TargetType="UniformGrid">
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>

    <Style x:Key="FormRow" TargetType="DockPanel">
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>

    <Style x:Key="ListItemBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonStandardNormalBrush}"/>
        <Setter Property="BorderThickness" Value="1 1 1 1"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonStandardHoverBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ButtonStandardPressedBrush}"/>
                <Setter Property="BorderThickness" Value="2"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonStandardNormalBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ButtonStandardHoverBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SectionContainer" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <Style x:Key="MainListView" TargetType="ListView" BasedOn="{StaticResource MaterialDesignCardsListBox}">
        <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}"/>
    </Style>

    <Style x:Key="Horizontal" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>
    
    <Style x:Key="Vertical" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>
    
</ResourceDictionary>