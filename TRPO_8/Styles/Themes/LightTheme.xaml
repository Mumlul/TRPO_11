<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes">




<Color x:Key="WindowBackgroundColor">#F5FAFB</Color>
<SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>

<Color x:Key="Card">#FFFFFF</Color>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource Card}"/>

<Color x:Key="Title">#2E3B4E</Color>
    <SolidColorBrush x:Key="TitleBrush" Color="{StaticResource Title}"/>

<Color x:Key="PrimaryTextColor">#444B54</Color>
<SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>

<Color x:Key="SecondaryTextColor">#6E7A89</Color>
<SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>

<Color x:Key="ButtonStandardNormalColor">#33B8B1</Color>
<Color x:Key="ButtonStandardHoverColor">#3A9AD9</Color>
<Color x:Key="ButtonStandardPressedColor">#3A9AD9</Color>
<SolidColorBrush x:Key="ButtonStandardNormalBrush" Color="{StaticResource ButtonStandardNormalColor}"/>
<SolidColorBrush x:Key="ButtonStandardHoverBrush" Color="{StaticResource ButtonStandardHoverColor}"/>
<SolidColorBrush x:Key="ButtonStandardPressedBrush" Color="{StaticResource ButtonStandardPressedColor}"/>

<Color x:Key="ButtonAddNormalColor">#10B981</Color>
<Color x:Key="ButtonAddHoverColor">#3A9AD9</Color>
<Color x:Key="ButtonAddPressedColor">#3A9AD9</Color>
<SolidColorBrush x:Key="ButtonAddNormalBrush" Color="{StaticResource ButtonAddNormalColor}"/>
<SolidColorBrush x:Key="ButtonAddHoverBrush" Color="{StaticResource ButtonAddHoverColor}"/>
<SolidColorBrush x:Key="ButtonAddPressedBrush" Color="{StaticResource ButtonAddPressedColor}"/>

<Color x:Key="ButtonDeleteNormalColor">#E65A4F</Color>
<Color x:Key="ButtonDeleteHoverColor">#E65A4F</Color>
<Color x:Key="ButtonDeletePressedColor">#E65A4F</Color>
<SolidColorBrush x:Key="ButtonDeleteNormalBrush" Color="{StaticResource ButtonDeleteNormalColor}"/>
<SolidColorBrush x:Key="ButtonDeleteHoverBrush" Color="{StaticResource ButtonDeleteHoverColor}"/>
<SolidColorBrush x:Key="ButtonDeletePressedBrush" Color="{StaticResource ButtonDeletePressedColor}"/>

<Color x:Key="Active_Control">#3A9AD9</Color>
    <SolidColorBrush x:Key="Active_ControlBrush" Color="{StaticResource Active_Control}"/>

<Color x:Key="Validation_back">#FFE8E8</Color>
    <SolidColorBrush x:Key="Validation_backBrush" Color="{StaticResource Validation_back}"/>

<Color x:Key="Error_Message">#E65A4F</Color>
    <SolidColorBrush x:Key="Error_MessageBrush" Color="{StaticResource Error_Message}"/>
    
    
    
</ResourceDictionary>